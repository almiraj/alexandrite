<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.almiraj.alexandrite" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Alexandrite</name>
    <description>
        Timesheet system (勤務表・勤怠管理システム)
    </description>
    <author email="rain@almiraj.net" href="https://github.com/almiraj/">
        almiraj
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-googleplus" spec="7.0.0">
        <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.491085898423-u8g0t4lqi7eue891vbddlvh62s8kkueo" />
        <variable name="WEB_APPLICATION_CLIENT_ID" value="952475037163-1t9aqiejuujpurgdvp6m9ompamudv2lq.apps.googleusercontent.com" />
    </plugin>
    <engine name="android" spec="^7.1.4" />
    <engine name="ios" spec="^4.5.5" />
</widget>
